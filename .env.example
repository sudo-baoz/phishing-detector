# Database Configuration
# Supported: mysql, postgresql, sqlite
DB_TYPE=mysql

# For MySQL/PostgreSQL (not needed for SQLite)
DB_HOST=localhost
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=phishing_detector
# DB_PORT=3306  # MySQL default: 3306, PostgreSQL default: 5432, leave empty for default

# SQLite example (uncomment to use):
# DB_TYPE=sqlite
# DB_NAME=phishing_detector  # Will create phishing_detector.db file

# PostgreSQL example (uncomment to use):
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_NAME=phishing_detector
# DB_PORT=5432

# Server Configuration
PORT=8000

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://your-frontend-domain.com,http://localhost:3000

# Application Settings
APP_NAME=Phishing URL Detection API
DEBUG=False

# AI Integration Settings
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
