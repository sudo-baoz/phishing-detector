# ============================================
# Phishing Detector - Environment Variables
# ============================================

# ----------------
# Database Settings
# ----------------
DB_TYPE=sqlite              # Options: sqlite, mysql, postgresql
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=phishing_detector
DB_PORT=3306               # MySQL: 3306, PostgreSQL: 5432

# ----------------
# Server Settings
# ----------------
PORT=8000
DEBUG=false                # Set to true for development

# ----------------
# CORS Settings
# ----------------
# Comma-separated list of allowed origins
# Example: https://yourfrontend.com,http://localhost:5173
CORS_ORIGINS=https://yourfrontend.com,http://localhost:5173

# ----------------
# Security Settings
# ----------------
# Cloudflare Turnstile Bot Protection
CLOUDFLARE_SECRET_KEY=0x4AAAAAAA... # Get from Cloudflare Dashboard
TURNSTILE_ENABLED=true              # Set to false to disable during development

# ----------------
# AI Integration
# ----------------
GEMINI_API_KEY=AIzaSy...            # Get from Google AI Studio

# ----------------
# Application
# ----------------
APP_NAME=Phishing URL Detection API
