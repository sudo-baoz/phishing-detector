# ============================================
# Phishing Detector - Environment Variables
# ============================================

# ----------------
# Database Settings
# ----------------
# Options: sqlite, mysql, postgresql
DB_TYPE=sqlite
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=phishing_detector
# MySQL: 3306, PostgreSQL: 5432
DB_PORT=3306

# ----------------
# Server Settings
# ----------------
PORT=8000
# Set to true for development
DEBUG=false

# ----------------
# CORS Settings
# ----------------
# Comma-separated list of allowed origins
# Example: https://yourfrontend.com,http://localhost:5173
CORS_ORIGINS=https://yourfrontend.com,http://localhost:5173

# ----------------
# JWT / Auth (SaaS)
# ----------------
# Required for POST /auth/token. Use a long random string in production.
JWT_SECRET=change-me-in-production-cybersentinel
JWT_ALGORITHM=HS256
# Token expiry in minutes (default 7 days)
# JWT_EXPIRE_MINUTES=10080

# ----------------
# Security Settings
# ----------------
# Cloudflare Turnstile Bot Protection
# Get from Cloudflare Dashboard
CLOUDFLARE_SECRET_KEY=0x4AAAAAAA...
# Set to false to disable during development
TURNSTILE_ENABLED=true
# Set to true to skip Turnstile verification (debug only; do not use in production)
# SKIP_TURNSTILE=false

# ----------------
# Captcha Solver (Vision Scanner bypass)
# ----------------
# FREE = StealthClick (Playwright click, no API key)
# 2CAPTCHA = 2captcha.com (paid, requires CAPTCHA_API_KEY)
# CAPSOLVER = capsolver.com (paid, speed-optimized, requires CAPTCHA_API_KEY)
CAPTCHA_PROVIDER=FREE
# Required only when CAPTCHA_PROVIDER is 2CAPTCHA or CAPSOLVER
CAPTCHA_API_KEY=

# ----------------
# Vision Scanner Proxy (optional, bypass Cloudflare IP blocks)
# ----------------
# e.g. http://proxy.provider.com:8000 or socks5://residential.proxy:1080
# PROXY_SERVER=
# PROXY_USERNAME=
# PROXY_PASSWORD=

# ----------------
# AI Integration
# ----------------
# Get from Google AI Studio
GEMINI_API_KEY=AIzaSy...
# Get from Google Cloud Console (Safe Browsing API)
GOOGLE_SAFE_BROWSING_KEY=AIzaSy...

# ----------------
# Application
# ----------------
APP_NAME=Phishing URL Detection API
